<div class="container-fluid">
    <h1>Settings</h1>
    <div class="row">
        <form method="post" class="form-horizontal">
            <div class="col-sm-6">
                <div class="col-sm-12">
                    <div class="form-group">
                        <input type="text" name="apiKey" value="{{apiKey}}" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <input type="text" name="apiSecret" value="{{apiSecret}}" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-6">
                    <div class="form-group">
                        <button type="submit" class="btn btn-default form-control"> Save </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>